<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Scan</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
  	<param-name>db_driver</param-name>
  	<param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>
  <context-param>
  	<param-name>db_url</param-name>
  	<param-value>jdbc:mysql://host:port/scan?useUnicode=true&amp;characterEncoding=UTF8</param-value>
  </context-param>
  <context-param>
  	<param-name>db_username</param-name>
  	<param-value></param-value>
  </context-param>
  <context-param>
  	<param-name>db_password</param-name>
  	<param-value></param-value>
  </context-param>
  <context-param>
  	<param-name>code_expires</param-name>
  	<param-value>5</param-value>
  </context-param>
  <context-param>
  	<param-name>token_expires</param-name>
  	<param-value>30</param-value>
  </context-param>
  <context-param>
  	<param-name>token_expires</param-name>
  	<param-value>30</param-value>
  </context-param>
  <context-param>
  	<param-name>project_thumbnail_max_size</param-name>
  	<param-value>750</param-value>
  </context-param>
  <context-param>
  	<param-name>gallery_thumbnail_max_size</param-name>
  	<param-value>400</param-value>
  </context-param>
  <filter>
  	<filter-name>EncodingFilter</filter-name>
  	<filter-class>com.jun90.projects.scan.web.filter.EncodingFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>APIFilter</filter-name>
  	<filter-class>com.jun90.projects.scan.web.filter.APIFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>TokenFilter</filter-name>
  	<filter-class>com.jun90.projects.scan.web.filter.TokenFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>PhoneNumberFilter</filter-name>
  	<filter-class>com.jun90.projects.scan.web.filter.PhoneNumberFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>CodeFilter</filter-name>
  	<filter-class>com.jun90.projects.scan.web.filter.CodeFilter</filter-class>
  </filter>
  <servlet>
  	<servlet-name>ReadyLoginServlet</servlet-name>
  	<servlet-class>com.jun90.projects.scan.web.controller.ReadyLoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>com.jun90.projects.scan.web.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LogoutServlet</servlet-name>
  	<servlet-class>com.jun90.projects.scan.web.controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProjectServlet</servlet-name>
  	<servlet-class>com.jun90.projects.scan.web.controller.ProjectServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>GalleryServlet</servlet-name>
  	<servlet-class>com.jun90.projects.scan.web.controller.GalleryServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ManagementServlet</servlet-name>
  	<servlet-class>com.jun90.projects.scan.web.controller.ManagementServlet</servlet-class>
  </servlet>
  <filter-mapping>
  	<filter-name>EncodingFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>APIFilter</filter-name>
  	<url-pattern>/login/ready</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>PhoneNumberFilter</filter-name>
  	<url-pattern>/login/ready</url-pattern>
  </filter-mapping>
  <servlet-mapping>
  	<servlet-name>ReadyLoginServlet</servlet-name>
  	<url-pattern>/login/ready</url-pattern>
  </servlet-mapping>
  <filter-mapping>
  	<filter-name>APIFilter</filter-name>
  	<url-pattern>/login</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>PhoneNumberFilter</filter-name>
  	<url-pattern>/login</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>CodeFilter</filter-name>
  	<url-pattern>/login</url-pattern>
  </filter-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>  
  <filter-mapping>
  	<filter-name>APIFilter</filter-name>
  	<url-pattern>/logout</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>TokenFilter</filter-name>
  	<url-pattern>/logout</url-pattern>
  </filter-mapping>
  <servlet-mapping>
  	<servlet-name>LogoutServlet</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProjectServlet</servlet-name>
  	<url-pattern>/project</url-pattern>
  </servlet-mapping>
  <filter-mapping>
  	<filter-name>APIFilter</filter-name>
  	<url-pattern>/gallery</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>TokenFilter</filter-name>
  	<url-pattern>/gallery</url-pattern>
  </filter-mapping>
  <servlet-mapping>
  	<servlet-name>GalleryServlet</servlet-name>
  	<url-pattern>/gallery</url-pattern>
  </servlet-mapping>
  <filter-mapping>
  	<filter-name>APIFilter</filter-name>
  	<url-pattern>/manage</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>TokenFilter</filter-name>
  	<url-pattern>/manage</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>PhoneNumberFilter</filter-name>
  	<url-pattern>/manage</url-pattern>
  </filter-mapping>
  <servlet-mapping>
  	<servlet-name>ManagementServlet</servlet-name>
  	<url-pattern>/manage</url-pattern>
  </servlet-mapping>
</web-app>